<!DOCTYPE html>
<html>
<head>
  <title>NewReader</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<script type="application/javascript" id="booted_feeds_json">
  <% Feed.find_or_create_by_url("http://feeds.feedburner.com/newsyc20") %>

  var FEEDS = <%= Feed.all.to_json.html_safe %>

    FEEDS.forEach(function(feed){
       feed.entries = <%= Entry.all.to_json.html_safe %>
    });
</script>

<%= yield %>


</body>
</html>
